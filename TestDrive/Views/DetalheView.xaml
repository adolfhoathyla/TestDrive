<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TestDrive.Views.DetalheView" Title="{Binding Veiculo.Nome}">
    <StackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Acessórios">
                    <SwitchCell Text="{Binding FreioABS.Resumo}" OnChanged="Freio_OnChanged" On="{Binding FreioABS.Ativo, Mode=TwoWay}"></SwitchCell>  
                    <SwitchCell Text="{Binding ArCondicionado.Resumo}" OnChanged="ArCondicionado_OnChanged" On="{Binding ArCondicionado.Ativo, Mode=TwoWay}"></SwitchCell>
                    <SwitchCell Text="{Binding Mp3Player.Resumo}" OnChanged="Mp3Player_OnChanged" On="{Binding Mp3Player.Ativo,Mode=TwoWay}"></SwitchCell>
                    <TextCell Text="{Binding ValorTotal}"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button x:Name="buttonProximo" Text="Próximo" Clicked="Handle_Clicked" VerticalOptions="End"></Button>
    </StackLayout>
</ContentPage>
